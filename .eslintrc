{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "endOfLine": "auto"
            }
        ],
        "arrow-body-style": ["error", "as-needed"],
        "no-unused-expressions": "off",
        "@typescript-eslint/no-unused-expressions": ["error", { "allowShortCircuit": true }],
        "import/prefer-default-export": "off",
        "react/jsx-props-no-spreading": "off"
    }
}
